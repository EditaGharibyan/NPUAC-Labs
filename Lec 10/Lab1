using System.Collections;
namespace Lect10.Generics
{
    public class ReverseComparer : IComparer
    {
        public int Compare(object? x, object? y)
        {
            int xx = Convert.ToInt32(x);
            int yy = Convert.ToInt32(y);
            if (xx > yy) return -1;
            else if (xx == yy) return 0;
            return 1;
        }
    }
    internal class Program
    {
        static void Main(string[] args)
        {

            ArrayList intNumber = new ArrayList() { 1, 2, 8, 9, 3, 6 };
            intNumber.Sort(new ReverseComparer());
            foreach (var num in intNumber)
            {
                Console.WriteLine($"{num}");
            }
        }
    }
}
